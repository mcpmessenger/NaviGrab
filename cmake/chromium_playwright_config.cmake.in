@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(Threads REQUIRED)
find_dependency(nlohmann_json REQUIRED)
find_dependency(spdlog REQUIRED)
find_dependency(SQLite3 REQUIRED)

# Include the targets file
include("${CMAKE_CURRENT_LIST_DIR}/chromium_playwright_targets.cmake")

# Check if Chromium is available
if(NOT TARGET chromium_playwright::chromium_playwright_core)
    message(WARNING "Chromium Playwright core library not found. Some features may be limited.")
endif()

# Set package properties
set(chromium_playwright_FOUND TRUE)
set(chromium_playwright_VERSION @PROJECT_VERSION@)
