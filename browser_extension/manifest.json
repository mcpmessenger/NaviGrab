{
  "manifest_version": 3,
  "name": "NaviGrab Universal Tooltips",
  "version": "1.0.0",
  "description": "Beautiful tooltips with real screenshots on every link and button",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["tooltip.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "NaviGrab Tooltips"
  }
}
